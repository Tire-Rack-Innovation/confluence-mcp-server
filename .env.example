# Confluence Cloud Configuration
# Your Confluence instance URL (e.g., https://your-domain.atlassian.net)
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net

# Authentication for Confluence Cloud
# Your Atlassian account email
CONFLUENCE_EMAIL=your-email@example.com

# API token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
CONFLUENCE_API_TOKEN=your-api-token-here

# Optional: Enable write operations (default: false)
# Set to 'true' to enable create/update/delete operations
CONFLUENCE_WRITE_ENABLED=false

# Optional: Space allowlist (comma-separated space keys)
# If set, only these spaces can be modified via write operations
# CONFLUENCE_ALLOWED_SPACES=TEAM,DOCS,WIKI

# Optional: Audit logging
# Set to 'true' to enable detailed audit logging of all operations
CONFLUENCE_AUDIT_LOG=true
